{
    "ecmaFeatures": {
        "modules": true
    },
    "rules": {
        "camelcase": 0,
        "indent": [2, 2],
        "no-unused-vars": [2, {"vars": "local", "args": "after-used"}],
        "no-console": 0,
        "no-underscore-dangle": 0,
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "globals": {
        "require": false,
        "module": false,
        "exports": false,
    }
}
